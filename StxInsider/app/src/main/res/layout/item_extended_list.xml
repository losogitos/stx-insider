<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_extended_list_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/stx_ripple_color"
    android:orientation="vertical">

        <TextView
            android:id="@+id/item_extended_list_main_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item header - no content"
            android:textColor="@android:color/black"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/item_extended_list_main_bottom_extension_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item header - no content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

</LinearLayout>

